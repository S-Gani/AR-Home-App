<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/background_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item android:drawable="@drawable/background_layer" />

    <!-- Border -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:color="#2E5090" android:width="5dp" /> <!-- White border with 2dp width -->
        </shape>
    </item>

</layer-list>
